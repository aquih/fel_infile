<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_move_form">
        <field name="name">account.move.form.inherit.fel_infile</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="fel_gt.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <button name="button_draft" position="after">
                    <button name="certificar" id="certificar" string="Certificar FEL" type="object" invisible="firma_fel != False"/>
                </button>
                <field name="resultado_xml_fel" position="after">
                    <field name="pdf_fel" widget="url"/>
                </field>
            </data>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_journal_form">
        <field name="name">account.journal.form.inherit.fel_infile</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="fel_gt.view_account_journal_form"/>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.fel_infile</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="fel_gt.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <field name="frases_fel" position="before">
                    <field name="usuario_fel"/>
                    <field name="clave_fel"/>
                    <field name="token_firma_fel"/>
                    <field name="buscar_nombre_para_dte_fel"/>
                </field>
            </data>
        </field>
    </record>

</odoo>
